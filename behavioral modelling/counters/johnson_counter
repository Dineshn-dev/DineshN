// johnson_counter provides 8 states of output

module johnson_counter(clk,rst,d,load,q);
input [3:0]d;
input clk,rst,load;
output [3:0]q;
reg [3:0] temp;
always@(posedge clk or rst )
begin
if (rst)
temp<=4'b0000;
else if(load)
temp<=d;
else
begin
temp[3]<=temp[0];
temp[2]<=temp[1];
temp[1]<=temp[2];
temp[0]<=~temp[3];
end
end
assign q=temp;
endmodule

//test_bench for johnson counter

module jc_tb;

//inputs
reg clk,rst;
reg [3:0]d;
reg load;
//outputs
wire [3:0]q;
johnson_counter uut(.clk(clk),.rst(rst),.d(d),.load(load),.q(q));
initial
begin
//intialize the inputs
clk=1;
rst=1;
load=0;
//wait for 100ns to finish global reset
#100;
//adding stimulus here
rst=1;
load=1;
d=4'd5;
#100
rst=0;
load=1;
d=4'd5;
#100;
end
always #50 clk=~clk;
endmodule
